@page "/analysis"
@inject IAnalysisService AnalysisService
@inject ISnackbar Snackbar

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <MudText Typo="Typo.h4" GutterBottom="true">Analysis</MudText>

    <MudGrid>
        <MudItem xs="12" md="6">
            <MudPaper Class="pa-4" Elevation="2">
                <MudText Typo="Typo.h6" GutterBottom="true">Data Input</MudText>
                
                <MudTextField @bind-Value="_csvPath" 
                              Label="Trace CSV Path" 
                              Variant="Variant.Outlined"
                              Adornment="Adornment.End"
                              AdornmentIcon="@Icons.Material.Filled.FolderOpen"
                              OnAdornmentClick="BrowseCsvFile"
                              HelperText="Path to merged trace CSV file" />

                <MudNumericField @bind-Value="_frameInterval" 
                                 Label="Frame Interval (hours)" 
                                 Variant="Variant.Outlined"
                                 Class="mt-3"
                                 Min="0.001" Step="0.1" />
            </MudPaper>
        </MudItem>

        <MudItem xs="12" md="6">
            <MudPaper Class="pa-4" Elevation="2">
                <MudText Typo="Typo.h6" GutterBottom="true">Model Selection</MudText>
                
                <MudSelect T="string" @bind-Value="_selectedModel" 
                           Label="Fitting Model"
                           Variant="Variant.Outlined">
                    @foreach (var model in _availableModels)
                    {
                        <MudSelectItem Value="@model">@model</MudSelectItem>
                    }
                </MudSelect>

                <MudButton Variant="Variant.Text" 
                           Color="Color.Primary" 
                           Class="mt-2"
                           OnClick="LoadModels"
                           Disabled="@_isLoadingModels">
                    @if (_isLoadingModels)
                    {
                        <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                    }
                    Refresh Models
                </MudButton>

                @if (_modelInfo != null)
                {
                    <MudDivider Class="my-4" />
                    <MudText Typo="Typo.subtitle2">Model Parameters</MudText>
                    <MudSimpleTable Dense="true" Class="mt-2">
                        <thead>
                            <tr>
                                <th>Parameter</th>
                                <th>Value</th>
                                <th>Bounds</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var param in _modelInfo.DefaultParameters)
                            {
                                <tr>
                                    <td>@param.Name</td>
                                    <td>@param.Value.ToString("G4")</td>
                                    <td>[@param.LowerBound.ToString("G2"), @param.UpperBound.ToString("G2")]</td>
                                </tr>
                            }
                        </tbody>
                    </MudSimpleTable>
                }
            </MudPaper>
        </MudItem>

        <MudItem xs="12">
            <MudPaper Class="pa-4" Elevation="2">
                <MudText Typo="Typo.h6" GutterBottom="true">Fitting Execution</MudText>
                
                @if (_isFitting)
                {
                    <MudProgressLinear Value="@_progress.Percentage" Color="Color.Primary" Class="my-3" />
                    <MudText>@_progress.Message</MudText>
                }

                @if (_summary != null)
                {
                    <MudAlert Severity="Severity.Success" Class="my-3">
                        Fitting completed! @_summary.SuccessfulFits / @_summary.TotalCells cells fitted successfully.
                        Mean RÂ² = @_summary.MeanRSquared.ToString("F3")
                    </MudAlert>
                    <MudText Typo="Typo.caption">Results saved to: @_summary.OutputPath</MudText>
                }
                
                <MudButton Variant="Variant.Filled" 
                           Color="Color.Primary" 
                           Class="mt-3"
                           OnClick="RunFitting"
                           Disabled="@(!CanRunFitting || _isFitting)">
                    @if (_isFitting)
                    {
                        <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                        <span>Fitting...</span>
                    }
                    else
                    {
                        <MudIcon Icon="@Icons.Material.Filled.PlayArrow" Class="mr-2" />
                        <span>Run Fitting</span>
                    }
                </MudButton>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

@code {
    private string _csvPath = string.Empty;
    private string _selectedModel = string.Empty;
    private double _frameInterval = 1.0;
    private List<string> _availableModels = [];
    private ModelInfo? _modelInfo;
    private FittingSummary? _summary;
    private JobProgress _progress = new();
    private bool _isLoadingModels;
    private bool _isFitting;

    private bool CanRunFitting => 
        !string.IsNullOrEmpty(_csvPath) && 
        !string.IsNullOrEmpty(_selectedModel);

    protected override async Task OnInitializedAsync()
    {
        await LoadModels();
    }

    private async Task BrowseCsvFile()
    {
        var customFileType = new FilePickerFileType(new Dictionary<DevicePlatform, IEnumerable<string>>
        {
            { DevicePlatform.WinUI, new[] { ".csv" } }
        });

        var result = await FilePicker.Default.PickAsync(new PickOptions
        {
            PickerTitle = "Select Trace CSV File",
            FileTypes = customFileType
        });

        if (result != null)
        {
            _csvPath = result.FullPath;
        }
    }

    private async Task LoadModels()
    {
        _isLoadingModels = true;
        try
        {
            _availableModels = await AnalysisService.GetAvailableModels();
            if (_availableModels.Count > 0 && string.IsNullOrEmpty(_selectedModel))
            {
                _selectedModel = _availableModels[0];
                await LoadModelInfo();
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Failed to load models: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isLoadingModels = false;
        }
    }

    private async Task LoadModelInfo()
    {
        if (string.IsNullOrEmpty(_selectedModel)) return;

        try
        {
            _modelInfo = await AnalysisService.GetModelInfo(_selectedModel);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Failed to load model info: {ex.Message}", Severity.Error);
        }
    }

    private async Task RunFitting()
    {
        if (!CanRunFitting || _modelInfo == null) return;

        _isFitting = true;
        _summary = null;
        _progress = new JobProgress();

        try
        {
            var config = new FittingConfig
            {
                CsvPath = _csvPath,
                ModelType = _selectedModel,
                FrameInterval = _frameInterval,
                FitParameters = _modelInfo.DefaultParameters,
                FixedParameters = _modelInfo.DefaultFixedParameters,
            };

            var progress = new Progress<JobProgress>(p =>
            {
                _progress = p;
                InvokeAsync(StateHasChanged);
            });

            _summary = await AnalysisService.RunFittingAsync(config, progress);
            Snackbar.Add("Fitting completed!", Severity.Success);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Fitting failed: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isFitting = false;
        }
    }
}
