@page "/visualization"

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <MudText Typo="Typo.h4" GutterBottom="true">Visualization</MudText>

    <MudGrid>
        <MudItem xs="12" md="6">
            <MudPaper Class="pa-4" Elevation="2">
                <MudText Typo="Typo.h6" GutterBottom="true">Image Viewer</MudText>
                <MudAlert Severity="Severity.Info" Class="mb-4">
                    Image visualization will be implemented here.
                </MudAlert>
                <MudText Typo="Typo.body2">
                    Features planned:
                </MudText>
                <MudList T="string" Dense="true">
                    <MudListItem Icon="@Icons.Material.Filled.Image">FOV image display</MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Layers">Channel overlays</MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Timeline">Time navigation</MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.ZoomIn">Zoom and pan</MudListItem>
                </MudList>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" md="6">
            <MudPaper Class="pa-4" Elevation="2">
                <MudText Typo="Typo.h6" GutterBottom="true">Trace Viewer</MudText>
                <MudAlert Severity="Severity.Info" Class="mb-4">
                    Trace plotting will be implemented here.
                </MudAlert>
                <MudText Typo="Typo.body2">
                    Features planned:
                </MudText>
                <MudList T="string" Dense="true">
                    <MudListItem Icon="@Icons.Material.Filled.ShowChart">Time series plots</MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.FilterList">Cell filtering</MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Compare">Multi-trace comparison</MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Download">Export to CSV</MudListItem>
                </MudList>
            </MudPaper>
        </MudItem>

        <MudItem xs="12">
            <MudPaper Class="pa-4" Elevation="2">
                <MudText Typo="Typo.h6" GutterBottom="true">Load Data</MudText>
                
                <MudTextField @bind-Value="_dataPath" 
                              Label="Processing Output Directory" 
                              Variant="Variant.Outlined"
                              HelperText="Path to processed FOV data" />
                
                <MudButton Variant="Variant.Filled" 
                           Color="Color.Primary" 
                           Class="mt-3"
                           Disabled="@string.IsNullOrEmpty(_dataPath)">
                    <MudIcon Icon="@Icons.Material.Filled.FolderOpen" Class="mr-2" />
                    Load Data
                </MudButton>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

@code {
    private string _dataPath = string.Empty;
}
